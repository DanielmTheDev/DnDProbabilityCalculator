@using DnDProbabilityCalculator.Blazor.Placeholder

@page "/parties"

<FluentStack Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.Center">
    <h1>Your Parties</h1>
</FluentStack>
<FluentDivider Style="margin: 1rem 0 5rem 0"></FluentDivider>

<FluentStack Orientation="Orientation.Vertical" VerticalAlignment="VerticalAlignment.Center" HorizontalAlignment="HorizontalAlignment.Center">
    <FluentGrid Style="width: 80%" Spacing="10" Justify="JustifyContent.Center">
        @if (_parties.Any())
        {
            @foreach (var party in _parties)
            {
                <FluentGridItem lg="3">
                    <FluentStack HorizontalAlignment="HorizontalAlignment.End">
                        <FluentButton IconEnd="@(new Icons.Filled.Size12.Dismiss())" Appearance="Appearance.Lightweight" OnClick="@(() => DeleteParty(party))"/>
                    </FluentStack>
                    <PartyCard Party="@party"></PartyCard>
                </FluentGridItem>
            }
        }
        else
        {
            <FluentGridItem lg="3">
                <SkeletonCard/>
            </FluentGridItem>
        }
    </FluentGrid>
</FluentStack>